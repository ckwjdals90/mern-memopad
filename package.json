{
  "name": "react_infinite_scroll_memopad",
  "version": "1.0.0",
  "description": "A single-page infinite-scrolling public memo app implemented using React.js, Redux, Express.js and MongoDB",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build public/bundle.js",
    "build": "babel server --out-dir build --presets=es2015 && webpack",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "development": "cross-env NODE_ENV=development nodemon --exec babel-node --presets=es2015 ./server/server.js --watch server"
  },
  "author": "Jungmin Cha",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "mongoose": "^4.10.2",
    "morgan": "^1.8.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "react-hot-loader": "^1.3.1",
    "webpack": "^2.6.0",
    "webpack-dev-server": "^2.4.5"
  }
}
